body
  margin: 0
  display: flex
  color: var(--n6)
  scrollbar-width: none
  &[dragging]
    user-select: none
input
body
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, "Apple Color Emoji", Arial, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"

h1:first-child
  margin-top: 0

#pages
  height: 100vh
  overflow: hidden
  width: calc(100vw - 280px)
  position: relative

#home
  svg
    color: var(--b3)
  .other-platforms-illustration
    width: 100%
    height: 300px
    border-radius: 3px
    background: var(--n2)
  #home-container
    max-width: 1200px
    margin: 0 auto
    padding: 24px 36px
  .header
    display: flex
    align-items: center
    .dash
      width: 100%
      height: 2px
      background: var(--n2)
      margin-left: 20px
    h1
      margin: 0
      margin-left: 20px
      white-space: nowrap
      transform: translateY(-2px)
    svg
      min-width: 200px
  .columns
    display: flex
    .image
      width: 100%
      height: 200px
      border-radius: 3px
      background: var(--n2)
    .column
      width: 100%
      margin-left: 20px
      &:first-child
        margin-left: 0
#user
  padding: 30px 50px
  &[active]
    display: block
  header
    display: flex
    justify-content: space-between
  .hero
    position: relative
    width: 100%
    max-width: 400px
    padding-right: 40px
  .subtitle
    font-size: 20px
    font-weight: 500
    line-height: 24px
    color: var(--n3)
    position: absolute
    left: 140px
    top: 76px

  .money
  .subscribers
    padding-top: 16px
    padding-right: 120px
    position: relative
    .title
      font-size: 54px
      font-weight: 600
      color: var(--n4)
      margin-bottom: 10px
    .label
      font-size: 14px
      text-transform: uppercase
      color: var(--n3)
    .up
      color: var(--g2)
      font-weight: bold
      font-size: 16px
      padding-left: 18px
      position: absolute
      right: 40px
      top: 28px
      &:before
        position: absolute
        left: 0
        top: 3px
        border-bottom: 12px solid var(--g2)
        border-right: 6px solid transparent
        border-left: 6px solid transparent
        content: ''
        display: block
        width: 0
        height: 0

  .content
    display: flex
    margin-top: 40px
    .col
      border-top: 1px solid var(--n2)
      width: 100%
      margin-right: 40px
      &:last-child
        margin-right: 0px
      .col-header
        color: var(--n3)
        text-transform: uppercase
        display: flex
        align-items: center
        height: 60px
        soci-icon
          margin-right: 8px
      soci-post-list
        padding: 0

#tags
  scroll-snap-type: x proximity;
  scroll-padding: 16px;
  overflow-y: hidden
  soci-column
    transform: translateY(10px)
    opacity: 0
    transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out, margin 0.3s ease-out
  &[active]
    soci-column
      transform: translateY(0)
      opacity: 1
      &:nth-child(2)
        transition-delay: 0.1s
      &:nth-child(3)
        transition-delay: 0.2s
      &:nth-child(4)
        transition-delay: 0.3s
      &.inserting
        opacity: 0
        margin-left: -416px

#submit-container
  max-width: 1200px
  padding: 24px 40px
  margin: 0 auto
  box-sizing: border-box
  h1, h2
    padding-left: 2px
  .url
    display: flex
    align-items: center
    position: relative
    height: 32px
    min-width: 540px
    line-height: 28px
    border: 2px solid var(--n2)
    box-sizing: border-box
    width: 100%
    font-size: 14px
    padding: 0 8px
    border-radius: 16px
    transition: none
    &[available="true"]
      background: var(--g1)
      border: 2px solid var(--g1);
      color: #fff
      cursor: pointer
      transition: all 0.1s ease-in-out, color 0s ease-in-out
      input
        cursor: pointer
    &[available="false"]
      border: 2px solid var(--r3);
      soci-icon
        color: var(--r3)
    .error
      position: absolute
      left: 2px
      bottom: -20px
      color: var(--r3)
      height: 20px
      font-size: 12px

  label
    cursor: inherit
  input
    text-decoration: inherit
    font-weight: bold
    border: none
    outline: none
    padding: 0
    font-size: 14px
    width: 100%
    background: transparent
    color: inherit
    &::placeholder 
      font-weight: normal
      text-transform: none;
      opacity: 0.5
      font-size: 14px
    &[name="title"]
      &::placeholder 
        font-size: 32px
        font-weight: 700px
      font-size: 32px
      font-weight: 700px
      margin-bottom: 24px
      padding-left: 2px
  soci-icon
    pointer-events: none
    position: absolute
    right: 2px

  .drop-area
    width: 100%
    height: 240px
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column
    border 2px dashed var(--n2)
    box-sizing: border-box
    border-radius: 8px
    .label
      font-weight: 500
      color: var(--n3)
      margin-bottom: 12px
  soci-tab
    soci-input
      width: 100%
      height: 240px
    &[name="Blog"]
      soci-input
        height: 550px
  button
    border-radius: 14px
    height: 28px
    color: var(--n0)
    cursor: pointer
    background: var(--b3)
    border: none
    padding: 0 8px
    outline: none
    min-width: 100px
    &:active
      background: var(--b2)
  
  soci-input
    border: 2px solid var(--n2)
    border-radius: 8px


  h2
    font-weight: 500
    font-size: 17px
    margin-top: 36px
  .tags
    display: grid
    grid-template-columns: repeat(3, 1fr)
    margin-bottom: 36px
    grid-column-gap: 10px
    soci-tag-input
      flex: 1
      --tag-height: 30px


soci-sidebar
  input
    margin: 0 0 8px
    padding: 0 10px
    border: 0
    border-bottom: 2px solid var(--n2)
    height: 38px
    font-size: 14px
    width: 100%

  input::placeholder
    text-transform: none
    font-size: 12px

  input:focus,
  input:active
    box-shadow: none
    outline: none
    border-bottom: 2px solid var(--b1)

  button
    margin-top: 8px
    border-radius: 16px
    height: 32px
    outline: 0
    border: 0
    width: 100%
    text-align: center
    font-weight: 600
    border: 1px solid var(--n2)
    background: #fff
    cursor: pointer
    position: relative
    svg
      position: absolute
      width: 24px
      height: 24px
      left: 4px
      top: 3px
      display: none

    &:hover
      background: var(--n1)

    &[waiting] 
      svg 
        display: block

[load-order]
  transform: translateY(20px)
  opacity: 0
  transition: all 0.3s cubic-bezier(.15,0,0,1), opacity 0.3s var(--soci-ease)
[load-order="secondary"]
  transform: translateY(25px)
  transition: all 0.35s cubic-bezier(.15,0,.20,1), opacity 0.35s var(--soci-ease)
[load-order="tertiary"]
  transform: translateY(30px)
  transition: all 0.4s cubic-bezier(.15,0,.35,1), opacity 0.4s var(--soci-ease)
soci-route[active]
  [load-order]
  [load-order="secondary"]
  [load-order="tertiary"]
    transform: translateY(0px)
    opacity: 1

#new-user
  #new-user-container
    padding: 24px 36px